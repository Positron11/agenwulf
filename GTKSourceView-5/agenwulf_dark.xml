<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="agenwulf_dark" _name="Agenwulf Dark" version="1.0">
	<!-- About -->
	<author>Aarush Kumbhakern</author>
	<_description>A dark theme for GTKSourceView 5.0</_description>
	
	<!-- Meta -->
	<metadata>
		<property name="variant">dark</property>
		<property name="light-variant">agenwulf_light</property>
	</metadata>

	<!-- Agenwulf colors -->
	<color name="bone-white" value="#f8f8f0"/>
	<color name="weird-gray" value="#909194"/>
	<color name="cyan" value="#8be9fd"/>
	<color name="green" value="#50fa7b"/>
	<color name="orange" value="#ffb86c"/>
	<color name="pink" value="#ff79c6"/>
	<color name="purple" value="#bd93f9"/>
	<color name="red" value="#ff5555"/>
	<color name="yellow" value="#f1fa8c"/>

	<!-- Helper colors -->
	<color name="background" value="#202020"/>
	<color name="current-line" value="#rgba(255,255,255,0.1)"/>
	<color name="selection" value="#236BE6"/>
	<color name="comment" value="#6272a4"/>

	<!-- Text -->
	<style name="text" foreground="bone-white" background="background"/>
	<style name="cursor" foreground="bone-white" background="bone-white"/>
	<style name="selection" background="selection"/>
	<style name="def:error" foreground="white" background="red" bold="true"/>
	<style name="misspelled-word" underline="error" underline-color="red"/>

	<!-- Editor -->
	<style name="map-overlay" background="#dedede"/>
  	<style name="background-pattern" background="#rgba(16,16,16,0.27)"/>
  	<style name="right-margin" foreground="#77767b" background="#c0bfbc"/>
	<style name="search-match" foreground="background" background="green" bold="true"/>
	
	<!-- Lines -->
	<style name="line-numbers" foreground="weird-gray" background="background"/>
	<style name="current-line" foreground="current-line" background="current-line"/>
	<style name="current-line-number" foreground="bone-white" bold="true"/>
	
	<!-- Brackets -->
	<style name="bracket-match" foreground="background" background="green" bold="true"/>
	<style name="bracket-mismatch" foreground="background" background="red" bold="true"/>
	
	<!-- Common -->
	<style name="def:function" foreground="green"/>
	<style name="def:identifier" foreground="pink"/>
	<style name="def:keyword" foreground="pink" bold="true"/>
	<style name="def:number" foreground="purple" />
	<style name="def:boolean" foreground="red"/>
	<style name="def:string" foreground="yellow"/>
	<style name="def:special-char" foreground="pink"/>
	<style name="def:builtin" foreground="cyan"/>
	<style name="def:type" foreground="green"/>
	<style name="def:preprocessor" foreground="green"/>
	<style name="def:comment" foreground="comment" italic="true"/>
	<style name="def:specials" foreground="#f8f8f2"/>
	<style name="def:statement" foreground="pink"/>
	
	<!-- RemarquÃ© -->
	<style name="remarque:bold" bold="true"/>
	<style name="remarque:italic" italic="true"/>
	<style name="remarque:underline" underline="true"/>
	<style name="remarque:strikethrough" strikethrough="true"/>
	<style name="remarque:highlight" background="yellow" foreground="background" bold="true"/>
	<style name="remarque:inline-code" background="#rgba(0,0,0,0.3)" foreground="green"/>
	<style name="remarque:tree" foreground="green" scale="0.9"/>
	<style name="remarque:enumeration" foreground="pink" scale="0.85"/>
	<style name="remarque:current" foreground="yellow" bold="true" scale="1.05"/>
	<style name="remarque:done" foreground="green" italic="true" strikethrough="true"/>
	<style name="remarque:failed" foreground="red" italic="true" strikethrough="true"/>
	<style name="remarque:banner" foreground="orange" italic="true" scale="0.9"/>
	<style name="remarque:heading" foreground="orange" bold="true"/>
	<style name="remarque:subheading" foreground="red" bold="true" italic="true"/>
	<style name="remarque:tag" foreground="comment" scale="0.9"/>
	<style name="remarque:placeholder" foreground="weird-gray" italic="true"/>
	<style name="remarque:link" foreground="cyan" underline="true" italic="true"/>
	
	<!-- Python -->
	<style name="python:module-handler" foreground="pink"/>
	<style name="python:function-name" foreground="green"/>
	<style name="python:decorator" foreground="green"/>
	<style name="python:class-name" foreground="orange"/>
	<style name="python:special-variable" foreground="cyan"/>
	<style name="python:builtin-constant" foreground="purple"/>

	<!-- Git -->
	<style background="#468410" bold="true" foreground="#f8f8f2" name="diff:added-line"/>
	<style foreground="#8b080b" name="diff:removed-line"/>
	<style background="#243a5f" foreground="#f8f8f2" name="diff:changed-line"/>
</style-scheme>
